{% extends "DTutoBundle::layout.html.twig" %}

{% block title %}{{ 'discutea.tuto.category.form.title'|trans }}{% endblock %}


{% block body %}
    {% if form is defined %}
  <div class="col-md-12">
    <h1>{{ 'discutea.tuto.category.form.title'|trans }}</h1>

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    
    <div class="form-group">
    {{ form_label(form.title) }}
    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
    </div>
    
    <div class="form-group">
    {{ form_label(form.description) }}
    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
    </div>
    
    <div class="form-group">
    {{ form_label(form.tmpContrib.content) }}
    {{ form_widget(form.tmpContrib.content, {'attr': {'class': 'form-control', 'rows': '15'}}) }}
    </div>
    
    <div class="form-group">
    {{ form_label(form.tmpContrib.status) }}
    {{ form_widget(form.tmpContrib.status, {'attr': {'class': 'form-control'}}) }}
    </div>
    <button type="submit" class="btn btn-primary">Submit</button
    {{ form_widget(form) }}
    {{ form_end(form) }}
  </div>
    {% else %}
        {{ dump(tutorial) }}
        
    {% endif %}
{% endblock %}
